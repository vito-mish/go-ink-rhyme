{
  "name": "go-ink-rhyme",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "start": "react-native start",
    "prepare": "husky",
    "postinstall": "npx pod-install ios",
    "open:xc": "open ios/GoInkRhyme.xcworkspace",
    "generate:assets": "node ./scripts/generate-assets-import",
    "cp:android-key": "cp __Key__/android/gradle.properties android/gradle.properties",
    "release:android": "npm run cp:android-key && cd android && ./gradlew bundleRelease && cd .. && open android/app/build/outputs/bundle/release",
    "test": "jest"
  },
  "dependencies": {
    "@react-native/gradle-plugin": "0.80.1",
    "@react-native/new-app-screen": "0.80.1",
    "@react-navigation/elements": "2.6.3",
    "@react-navigation/native": "7.1.17",
    "@react-navigation/native-stack": "7.3.25",
    "i18next": "25.6.0",
    "react": "19.1.0",
    "react-i18next": "16.1.5",
    "react-native": "0.80.1",
    "react-native-localize": "3.5.4",
    "react-native-safe-area-context": "5.6.0",
    "react-native-screens": "4.14.1",
    "react-native-splash-view": "0.0.18",
    "styled-components": "6.1.19",
    "styled-system": "5.1.5"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.3",
    "@babel/runtime": "7.25.0",
    "@eslint/js": "9.31.0",
    "@react-native-community/cli": "19.0.0",
    "@react-native-community/cli-platform-android": "19.0.0",
    "@react-native-community/cli-platform-ios": "19.0.0",
    "@react-native/babel-preset": "0.80.1",
    "@react-native/eslint-config": "0.80.1",
    "@react-native/metro-config": "0.80.1",
    "@react-native/typescript-config": "0.80.1",
    "@types/jest": "29.5.13",
    "@types/react": "19.1.0",
    "@types/react-test-renderer": "19.1.0",
    "@types/styled-components-react-native": "5.2.5",
    "@types/styled-system": "5.1.24",
    "eslint": "9.31.0",
    "eslint-plugin-jest": "29.0.1",
    "eslint-plugin-prettier": "5.5.3",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.3.0",
    "husky": "9.1.7",
    "jest": "29.6.3",
    "lint-staged": "16.1.2",
    "prettier": "2.8.8",
    "react-test-renderer": "19.1.0",
    "typescript": "5.0.4",
    "typescript-eslint": "8.37.0"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18"
  }
}
